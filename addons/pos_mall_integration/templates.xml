        <record model="ir.ui.view" id="mall_integration_file_tree_view">
            <field name="name">mall_integration_file.tree</field>
            <field name="model">mall.mall_integration.dailyfile</field>
            <field name="arch" type="xml">
                <tree string="Uploaded File">
                    <field name="file_name"/>
                    <field name="value_date" />
                    <field name="status" />
                    <field name="uploaded_date"/>

                </tree>
            </field>
        </record>

        <!-- window action -->
        <!--
            The following tag is an action definition for a "window action",
            that is an action opening a view or a set of views
        -->
        <record model="ir.actions.act_window" id="mall_integration_file_action">
            <field name="name">Mall Integration</field>
            <field name="res_model">mall.mall_integration.dailyfile</field>
            <field name="view_type">tree</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="mall_integration_file_menu" parent="point_of_sale.menu_point_of_sale"
                  name="Daily Upload File Log" action="mall_integration_file_action" />

        <!-- wizard form -->
        <record model="ir.ui.view" id="mall_integration_file_wizard_form_view">
            <field name="name">wizard.form</field>
            <field name="model">mall.mall_integration.dailyfile.wizard</field>
            <field name="arch" type="xml">
                <form string="Create file">
                    <group>
                        <field name="value_date"/>
                    </group>
                    <footer>
                        <button name="generate" type="object"
                                string="Generate" class="oe_highlight"/>
                        or
                        <button special="cancel" string="Cancel"/>
                    </footer>

                </form>
            </field>
        </record>

        <act_window id="launch_mall_integration_file_wizard"
                    name="Create daily file"
                    res_model="mall.mall_integration.dailyfile.wizard"
                    view_mode="form"
                    target="new"
                    key2="client_action_multi"/>
        <menuitem id="mall_integration_wizard_menu" parent="point_of_sale.menu_point_of_sale"
                  name="Create Daily Upload File" action="launch_mall_integration_file_wizard" />

        <record model="ir.ui.view" id="mall_integration_upload_wizard_form_view">
            <field name="name">wizard.form</field>
            <field name="model">mall.mall_integration.upload.wizard</field>
            <field name="arch" type="xml">
                <form string="Upload file">
                    <footer>
                        <button name="upload" type="object"
                                string="Upload" class="oe_highlight"/>
                        or
                        <button special="cancel" string="Cancel"/>
                    </footer>

                </form>
            </field>
        </record>

        <act_window id="launch_mall_integration_upload_wizard"
                    name="Upload file"
                    res_model="mall.mall_integration.upload.wizard"
                    view_mode="form"
                    target="new"
                    key2="client_action_multi"/>
        <menuitem id="mall_integration_upload_wizard_menu" parent="point_of_sale.menu_point_of_sale"
                  name="Upload File" action="launch_mall_integration_upload_wizard" />

    </data>
</openerp>